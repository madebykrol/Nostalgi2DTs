{
  "extends": "@repo/typescript-config/vite.json",
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true
  }
}
